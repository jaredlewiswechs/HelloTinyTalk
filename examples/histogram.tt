// Histogram â€” Distribution of Data
// Visualize how values are distributed.

// === Simulate exam scores ===
let scores = []
for i in range(50) {
    // Generate scores between 40 and 100
    let score = 40 + (i * 7 + 13) % 61
    append(scores, score)
}

chart_histogram(scores, 8, "Exam Score Distribution")

show("=== Score Statistics ===")
show("Students:  {len(scores)}")
show("Average:   {round(scores _avg, 1)}")
show("Minimum:   {scores _min}")
show("Maximum:   {scores _max}")
show("Std Range: {scores _max - scores _min}")

// === Passing vs failing ===
let passing = scores _filter((s) => s >= 60) _count
let failing = scores _filter((s) => s < 60) _count

let pass_labels = ["Passing (>=60)", "Failing (<60)"]
let pass_values = [passing, failing]
chart_pie(pass_labels, pass_values, "Pass/Fail Breakdown")

show("Passing: {passing} students ({round(passing / len(scores) * 100)}%)")
show("Failing: {failing} students ({round(failing / len(scores) * 100)}%)")
